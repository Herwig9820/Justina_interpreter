program startJustina;


// -----------------------------------------------------------------------------------------------------------------------
// This function makes a few settings,checks how Justina was started (cold start or not) and prints a line to the console.
// -----------------------------------------------------------------------------------------------------------------------

// arguments: none
// returns: nothing 

function start();
	dispWidth 30;									// set display width for calculation results to 30 characters
	angleMode 1;									// set degrees
	coutLine "the sine of 90 degrees is ", sin(90);	// print the sine of 90 degrees to the console								
	coutLine "cold start ? ", isColdStart();		// print 1 if this was a cold start, otherwise 0
	coutLine "function 'start()' executed";			
end;

